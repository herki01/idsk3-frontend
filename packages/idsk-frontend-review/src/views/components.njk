{% extends "layouts/full-width-landmarks.njk" %}

{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "macros/showExamples.njk" import showExamples %}

{% set htmlLang = 'sk' %}

{% block pageTitle %}All components - ID-SK Frontend{% endblock %}

{% set bodyClasses = "language-markup" %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "ID-SK",
        href: "/"
      },
      {
        text: "Všetky komponenty"
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <h1 class="govuk-heading-xl">
      Všetky komponenty
    </h1>
  </div>
  {% for componentFixtures in componentsFixtures %}
    {{ showExamples(componentFixtures, ["default"]) }}
  {% endfor %}
{% endblock %}
