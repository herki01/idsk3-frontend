{% from "govuk/components/breadcrumbs/macro.njk" import govukBreadcrumbs %}
{% from "macros/showExamples.njk" import showExamples %}

{% extends "layouts/full-width-landmarks.njk" %}

{% set htmlLang = 'sk' %}

{% block pageTitle %}{{ componentName | unslugify }} - ID-SK Frontend{% endblock %}

{% set bodyClasses = "language-markup" %}

{% set htmlMarkup %}
  {% include componentName + "/" + componentName + ".njk" ignore missing %}
{% endset %}

{% block beforeContent %}
  {{ govukBreadcrumbs({
    items: [
      {
        text: "ID-SK",
        href: "/"
      },
      {
        text: "VÅ¡etky komponenty",
        href: "/components"
      },
      {
        text: componentTitle
      }
    ]
  }) }}
{% endblock %}

{% block content %}
  <div class="govuk-width-container">
    <h1 class="govuk-heading-xl">
      {% block componentName %}
        {{ componentName | unslugify }}
        -
        {{ componentTitle }}
      {% endblock %}
    </h1>
  </div>

  {% block examples %}
    {{ showExamples(componentFixtures) }}
  {% endblock %}
{% endblock %}
